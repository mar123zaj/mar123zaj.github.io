---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Github, Linkedin } from "@lucide/astro";

const experience = [
  {
    role: "Senior Software Developer",
    company: "Company Name",
    period: "2022 — Present",
    description: "Leading development of web applications, mentoring junior developers, and driving technical decisions.",
    highlights: ["System architecture design", "Team mentorship", "CI/CD pipeline optimization"],
  },
  {
    role: "Software Developer",
    company: "Previous Company",
    period: "2019 — 2022",
    description: "Built and maintained full-stack web applications using modern technologies.",
    highlights: ["React & TypeScript frontend", "REST API development", "Database optimization"],
  },
  {
    role: "Junior Developer",
    company: "First Company",
    period: "2017 — 2019",
    description: "Started career working on web development projects and learning best practices.",
    highlights: ["Frontend development", "Code reviews", "Agile methodology"],
  },
];

const education = [
  {
    degree: "Master of Science in Computer Science",
    school: "University Name",
    period: "2015 — 2017",
  },
  {
    degree: "Bachelor of Science in Computer Science",
    school: "University Name",
    period: "2011 — 2015",
  },
];

const skillGroups = [
  { label: "Programming", items: ["TypeScript", "Python", "Java", "SQL", "HTML/CSS"] },
  { label: "Frameworks", items: ["React", "Next.js", "Astro", "Spring Boot", "Node.js"] },
  { label: "Infrastructure", items: ["AWS", "Docker", "Kubernetes", "Terraform", "GitHub Actions"] },
  { label: "Practices", items: ["TDD", "CI/CD", "Code Review", "Agile/Scrum", "System Design"] },
];
---

<BaseLayout title="About" description="Marcin Zając — software developer. Background, experience, skills, and contact.">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <!-- Intro -->
    <div class="mb-16">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-2">Marcin Zając</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Software Developer</p>

      <div class="prose prose-gray dark:prose-invert max-w-none">
        <p class="text-lg leading-relaxed">
          Hi! I'm a software developer who enjoys building things that live on the web.
          I'm passionate about clean code, thoughtful architecture, and sharing what I learn with others.
        </p>
        <p>
          I've been working in software development for several years, focusing on full-stack
          web applications. I believe in writing code that is not only functional but also
          maintainable and elegant.
        </p>
      </div>
    </div>

    <!-- Experience -->
    <section class="mb-16">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
        Experience
      </h2>
      <div class="space-y-8">
        {experience.map(({ role, company, period, description, highlights }) => (
          <div class="relative pl-6 border-l-2 border-indigo-200 dark:border-indigo-900">
            <div class="absolute -left-[9px] top-1 w-4 h-4 rounded-full bg-indigo-600 dark:bg-indigo-400 border-2 border-white dark:border-gray-950"></div>
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1 mb-2">
              <h3 class="font-semibold text-gray-900 dark:text-white">{role}</h3>
              <span class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap">{period}</span>
            </div>
            <p class="text-sm font-medium text-indigo-600 dark:text-indigo-400 mb-2">{company}</p>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">{description}</p>
            <ul class="flex flex-wrap gap-2">
              {highlights.map((h) => (
                <li class="px-2 py-1 text-xs font-medium rounded-md bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400">
                  {h}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- Education -->
    <section class="mb-16">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
        Education
      </h2>
      <div class="space-y-6">
        {education.map(({ degree, school, period }) => (
          <div class="relative pl-6 border-l-2 border-indigo-200 dark:border-indigo-900">
            <div class="absolute -left-[9px] top-1 w-4 h-4 rounded-full bg-indigo-600 dark:bg-indigo-400 border-2 border-white dark:border-gray-950"></div>
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1">
              <h3 class="font-semibold text-gray-900 dark:text-white">{degree}</h3>
              <span class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap">{period}</span>
            </div>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">{school}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-16">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
        Skills
      </h2>
      <div class="grid gap-6 sm:grid-cols-2">
        {skillGroups.map(({ label, items }) => (
          <div>
            <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">{label}</h3>
            <div class="flex flex-wrap gap-2">
              {items.map((item) => (
                <span class="px-3 py-1 text-sm rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact -->
    <section class="p-8 rounded-xl bg-indigo-50 dark:bg-indigo-950/50 border border-indigo-100 dark:border-indigo-900">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Get in touch</h2>
      <p class="text-gray-600 dark:text-gray-400 mb-4">
        I'm always open to interesting conversations and collaboration opportunities.
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href="https://github.com/mar123zaj"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-900 dark:bg-white text-white dark:text-gray-900 text-sm font-medium hover:opacity-90 transition-opacity"
        >
          <Github size={16} />
          GitHub
        </a>
        <a
          href="https://linkedin.com/in/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-[#0A66C2] text-white text-sm font-medium hover:opacity-90 transition-opacity"
        >
          <Linkedin size={16} />
          LinkedIn
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
